    <!-- List Section -->
    <section id="list">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Upcoming Dollies</h2>
                    <hr class="star-primary"> <!-- Should make a donut logo or something here -->
                </div>
            </div>
            <div class="row">
                <div class="col-lg-7 col-centered">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody> <!-- Dynamically this section -->
                          <% upcomingUsers.forEach(function(user) { %>
                            <tr>
                              <td>
                            <%= user.real_name %>
                            </td>
                            <td>
                              <%= user.date %>
                            </td>
                            </tr>
                          <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- Rating Section -->
    <section class="success" id="rate">
        <div class="container">
            <div class="row">
